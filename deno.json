{
  "name": "@srdjan/bluesky-bot",
  "version": "1.3.0",
  "exports": {
    ".": "./mod.ts",
    "./install": "./install.ts",
    "./validate": "./validate.ts"
  },
  "license": "MIT",
  "tasks": {
    "install": "deno run -A install.ts",
    "validate": "deno run -A validate.ts",
    "post": "deno run -A mod.ts",
    "test": "BLUESKY_DRYRUN=on deno run -A mod.ts",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@atproto/api": "npm:@atproto/api@^0.13.14",
    "@std/path": "jsr:@std/path@1.0.8"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "semiColons": true
  },
  "publish": {
    "exclude": [
      ".git",
      ".githooks",
      "scripts",
      ".env",
      ".claude",
      "DISTRIBUTION.md"
    ]
  }
}
